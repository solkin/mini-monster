<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/switcher_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/socket_background"
        android:scaleType="center"
        android:src="@drawable/ic_socket_free" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/switcher_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/switcher_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switcher_toggle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="false"
        android:padding="8dp"
        android:textOff="@string/value_off"
        android:textOn="@string/value_on" />

</LinearLayout>